<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ca.wallacemohawcollege.alex.whereya.Register"
    tools:showIn="@layout/activity_register">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sign-Up"
            android:id="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05"
            android:rowCount="7"
            android:columnCount="3">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/Emaillbl"
                android:layout_column="0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_row="0" />

            <EditText
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="2"
                android:id="@+id/rEmail"
                android:layout_column="1"
                android:layout_row="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:id="@+id/Username_lbl"
                android:layout_column="0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_row="1" />

            <EditText
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:id="@+id/rUser"
                android:layout_column="1"
                android:layout_row="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/Password_lbl"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_row="2" />

            <EditText
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="2"
                android:id="@+id/rPassword"
                android:layout_column="1"
                android:layout_row="2" />

            <TextView
                android:layout_width="82dp"
                android:layout_height="62dp"
                android:text="Password Confirmation"
                android:id="@+id/Confirmation_lbl"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_row="3" />

            <EditText
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="1"
                android:id="@+id/rConfirm"
                android:layout_column="1"
                android:layout_row="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:id="@+id/Country_lbl"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_row="4" />

            <Spinner
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:id="@+id/Country_spnr"
                android:layout_column="1"
                android:entries="@array/Countries"
                android:spinnerMode="dialog"
                android:layout_row="4" />

        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12"
            android:weightSum="1"
            android:keepScreenOn="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:id="@+id/textView7"
                android:layout_weight="0.13"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.73"
                android:orientation="horizontal"
                android:id="@+id/genderGroup"
                android:hapticFeedbackEnabled="true">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/male_chkbx"
                    android:layout_weight="0.40"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/female_chkbx"
                    android:layout_weight="0"
                    android:layout_column="2"
                    android:layout_row="5"
                    android:checked="false" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:id="@+id/textView8"
                android:layout_weight="0.14" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agree"
                android:id="@+id/Agree_chkbx"
                android:checked="false" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:id="@+id/conBtn"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Terms of Service"
            android:id="@+id/terms_link"
            android:layout_weight="0"
            android:layout_gravity="bottom"
            android:layout_marginTop="45dp" />

    </LinearLayout>
</RelativeLayout>
